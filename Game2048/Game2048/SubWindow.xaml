<Window x:Class="Game2048.SubWindow"
        x:Name="endWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game2048"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Height="120" Width="120" ResizeMode="NoResize"
        Background="LightBlue" BorderBrush="{x:Null}" BorderThickness="0" WindowStyle="None">
    <Grid Height="120" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="scoreTextBlock" FontSize="16" Text="0000!" HorizontalAlignment="Center" Margin="38,10,39,91" RenderTransformOrigin="0.516,-0.117" />
        <Button x:Name="gameRestart" Content="重来" Height="20" Width="60" Background="yellow" BorderBrush="{x:Null}" BorderThickness="0" Margin="30,49,30,51" RenderTransformOrigin="1.858,1.592" />
        <Button x:Name="gameEnd" Content="结束" Height="20" Width="60" Background="Red" BorderBrush="{x:Null}" BorderThickness="0" Margin="30,90,30,10" />
    </Grid>
</Window>
